# Configurações do Directus
DIRECTUS_BASE_URL=https://contract.devix.co
DIRECTUS_TOKEN=your-directus-token-here

# Configurações da aplicação
RESULTS_DIR=results
LUA_FILTER_PATH=comments_html_filter_direct.lua
CHECK_INTERVAL=60
REQUEST_TIMEOUT=30
VERBOSE_MODE=false
DRY_RUN=false

# Configurações do Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5005

# Configurações do processador de modelo de contrato
MODELO_CONTRATO_CHECK_INTERVAL=60
MODELO_CONTRATO_FLASK_PORT=5006
MODELO_CONTRATO_RESULTS_DIR=results_modelo
MODELO_CONTRATO_VERBOSE=false
MODELO_CONTRATO_REQUEST_TIMEOUT=30

# Configurações do Orquestrador
ORQUESTRADOR_MODO=sequencial
ORQUESTRADOR_INTERVALO=60
ORQUESTRADOR_PORTA=5007
ORQUESTRADOR_VERBOSE=false
ORQUESTRADOR_SINGLE_RUN=false

# Configurações de produção
FLASK_ENV=production
PYTHONPATH=/app
FLASK_DEBUG=True

# Configurações de segurança
MAX_FILE_SIZE=52428800

# Configurações do CapRover (para deploy automático)
# Obtenha o App Token em: Deployment → App Token → Show Token
CAPROVER_URL=https://captian.seurvidor-caprover.com
CAPROVER_APP_NAME=versiona-ai
CAPROVER_APP_TOKEN=seu-caprover-app-token-aqui
DOCKER_IMAGE=docker-registry.seu-servidor-registry.com/versiona-ai-minimal:latest
