# Configuração para produção - Versiona AI
# Este arquivo deve ser copiado como .env no ambiente de produção

# === CONFIGURAÇÕES DO DIRECTUS ===
DIRECTUS_BASE_URL=https://contract.devix.co
DIRECTUS_TOKEN=your_production_token_here

# === CONFIGURAÇÕES DO FLASK ===
FLASK_PORT=8001
FLASK_ENV=production
FLASK_DEBUG=false

# === CONFIGURAÇÕES DE SEGURANÇA ===
SECRET_KEY=your_super_secret_key_for_production

# === CONFIGURAÇÕES DE LOGS ===
LOG_LEVEL=INFO
LOG_FILE=/app/logs/versiona-ai.log

# === CONFIGURAÇÕES DE PERFORMANCE ===
WORKERS=4
TIMEOUT=30
MAX_REQUESTS=1000

# === CONFIGURAÇÕES DE CORS ===
CORS_ORIGINS=https://contract.devix.co,https://versiona-ai.devix.co
